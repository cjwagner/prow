package(default_visibility = ["//visibility:public"])

_GO_DEFAULT_TEST = "//prow/test/integration/test:go_default_test"

sh_test(
    name = "run-test",
    srcs = ["test.sh"],
    args = [
        "$(location %s)" % _GO_DEFAULT_TEST,
    ],
    data = [
        _GO_DEFAULT_TEST,
    ],
    tags = [
        "no-remote-exec",
    ],
)

sh_binary(
    name = "setup-local-registry",
    srcs = ["setup-local-registry.sh"],
    tags = [
        "no-remote-exec",
    ],
)

sh_binary(
    name = "setup-cluster",
    srcs = ["setup-cluster.sh"],
    args = [
        "--config-path",
        "$(location prow)",
    ],
    data = [
        "prow",
    ],
    tags = [
        "no-remote-exec",
    ],
)

sh_binary(
    name = "cleanup",
    srcs = ["cleanup.sh"],
    tags = [
        "no-remote-exec",
    ],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//prow/test/integration/fakeghserver:all-srcs",
        "//prow/test/integration/test:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
